{
  "definitions": {
    "GameJoin": {
      "type": "object",
      "properties": {
        "type": { "const": "game_join" },
        "channel_id": { "type": "integer" }
      },
      "required": ["type", "channel_id"]
    },
    "GameCommand": {
      "type": "object",
      "properties": {
        "type": { "const": "game_command" },
        "channel_id": { "type": "integer" },
        "payload": {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "enum": ["move_up", "move_down", "move_left", "move_right", "attack", "heal"]
            },
            "target_username": { "type": ["string", "null"] },
            "timestamp": { "type": "integer" }
          },
          "required": ["command"]
        }
      },
      "required": ["type", "channel_id", "payload"]
    }
  }
}
