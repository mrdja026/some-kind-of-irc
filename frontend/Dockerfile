ARG VITE_API_URL=http://backend:8002
ARG VITE_WS_URL=ws://backend:8002
ARG VITE_AI_API_URL=http://ai-service:8001
ARG VITE_DATA_PROCESSOR_URL
ARG VITE_PUBLIC_API_URL
ARG VITE_PUBLIC_WS_URL
ARG VITE_PUBLIC_AI_API_URL
ARG VITE_PUBLIC_DATA_PROCESSOR_URL

FROM node:22-alpine AS build

ARG VITE_API_URL
ARG VITE_WS_URL
ARG VITE_AI_API_URL
ARG VITE_DATA_PROCESSOR_URL
ARG VITE_PUBLIC_API_URL
ARG VITE_PUBLIC_WS_URL
ARG VITE_PUBLIC_AI_API_URL
ARG VITE_PUBLIC_DATA_PROCESSOR_URL
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_WS_URL=$VITE_WS_URL
ENV VITE_AI_API_URL=$VITE_AI_API_URL
ENV VITE_DATA_PROCESSOR_URL=$VITE_DATA_PROCESSOR_URL
ENV VITE_PUBLIC_API_URL=$VITE_PUBLIC_API_URL
ENV VITE_PUBLIC_WS_URL=$VITE_PUBLIC_WS_URL
ENV VITE_PUBLIC_AI_API_URL=$VITE_PUBLIC_AI_API_URL
ENV VITE_PUBLIC_DATA_PROCESSOR_URL=$VITE_PUBLIC_DATA_PROCESSOR_URL

WORKDIR /app

COPY package.json pnpm-lock.yaml* /app/
RUN corepack enable && pnpm install --frozen-lockfile

COPY . /app
RUN pnpm build

FROM node:22-alpine AS runner

ARG VITE_API_URL
ARG VITE_WS_URL
ARG VITE_AI_API_URL
ARG VITE_DATA_PROCESSOR_URL
ARG VITE_PUBLIC_API_URL
ARG VITE_PUBLIC_WS_URL
ARG VITE_PUBLIC_AI_API_URL
ARG VITE_PUBLIC_DATA_PROCESSOR_URL
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_WS_URL=$VITE_WS_URL
ENV VITE_AI_API_URL=$VITE_AI_API_URL
ENV VITE_DATA_PROCESSOR_URL=$VITE_DATA_PROCESSOR_URL
ENV VITE_PUBLIC_API_URL=$VITE_PUBLIC_API_URL
ENV VITE_PUBLIC_WS_URL=$VITE_PUBLIC_WS_URL
ENV VITE_PUBLIC_AI_API_URL=$VITE_PUBLIC_AI_API_URL
ENV VITE_PUBLIC_DATA_PROCESSOR_URL=$VITE_PUBLIC_DATA_PROCESSOR_URL

ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=80

WORKDIR /app
COPY --from=build /app/.output /app/.output

EXPOSE 80

CMD ["node", "/app/.output/server/index.mjs"]
